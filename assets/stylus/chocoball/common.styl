fontPath = "../../fonts/"
$path = "../../img/chocoball/"

@font-face
    font-family 'DFPMaruGothic_U-SB'
    src url(fontPath DFMaruGothic_U-SB.ttc)
@font-face
    font-family 'KozGoPr6N-Bold'
    src url(fontPath KozGoPr6N-Bold.otf)

.ui
    position fixed
    height 100%
    width 100%
    z-index 100
    display none
    font-family 'DFPMaruGothic_U-SB'
    &.game
        height auto
    &__main
        height 100%
        position relative
        margin 0 auto
        &__panel
            background-color #000
            position fixed
            width 100%
            height 100%
        &__content
            height 100%
            position relative
            margin 0 auto
            background-image url($path backgrounds/bg-chocolate.png)
            background-size contain

    &__game
        position relative
        &__content
            height 100%
            position relative
            margin 0 auto

    &__endGame
        display none
        height 100%
        position relative
        margin 0 auto
        color #fff
        &__panel
            background-color rgba(112,112,112,0.5)
            position fixed
            width 100%
            height 100%
        &__content
            height 100%
            position relative
            margin 0 auto
            color #fff
        & > .mascot
            position absolute
            right 0
            bottom (10/375)*100%
            width (162/375)*100%
            &:before
                content ''
                display block
                width 100%
                padding-top (396/325)*100%
            & > .ui-img
                width 100%
                height 100%
                top 0
                left 0
                position absolute
    &__mask
        display none
        position fixed
        top 0
        left 0
        z-index 9999
        width 100vw
        height 100vh
        background-color rgba(0,0,0,.6)
        .loading
            font-size 0
            position absolute
            top 50%
            left 50%
            -webkit-transform translate(-50%,-50%)
            -moz-transform translate(-50%,-50%)
            -ms-transform translate(-50%,-50%)
            transform translate(-50%,-50%)

            &:after
                content ''
                display block
                padding-top 100%
                width 10vh
                background-image url($path deco/loading.gif)
                background-size 100% 100%
        &.active
            display block

.tools
    position absolute
    top 0
    left 0
    width 100%

    &__setting
        float left
        margin-top 8px
        margin-left 10px
        .ui-btn
            display block
            .ui-img
                width calc(100vh * 40 / 675)
                height calc(100vh * 40 / 675)
    &__account
        float right
        margin-top 8px
        margin-right 10px
        .ui-btn
            display block
            text-decoration unset
            .ui-login
                font-family 'DFPMaruGothic_U-SB'
                display block
                width calc(100vh * 100 / 675)
                height calc(100vh * 30 / 675)
                background-color #ff8db3
                border-radius 30px
                text-align center
                position relative
                .ui-login-text
                    position absolute
                    top 50%
                    left 50%
                    transform translate(-50%,-50%)
                    font-size calc(100vh * 16 / 675)
                    line-height calc(100vh * 16 / 675)
                    white-space nowrap
                    color white

.board
    position absolute
    left 0
    bottom 0
    width 100%
    text-align center

    &__mascot
        display block
        width (230/375)*100%
        margin 0 auto
        .ui-img
            display block
            width 100%
    &__content
        background-image url($path backgrounds/bg-diamond.png)
        background-repeat no-repeat
        background-size cover
        position relative
        padding-top (70/375)*100%
        padding-bottom (12/439)*100%
        display table
        width 100%
        max-height calc((var(--vh, 1vh) * 100) * (1 - (60 / 675)))
        -moz-transition height .3s ease-in
        -o-transition height .3s ease-in
        -webkit-transition height .3s ease-in
        transition height .3s ease-in

        &:before
            content ''
            display block
            position absolute
            z-index 10
            left 0
            top 0
            width 100%
            padding-top (70/375)*100%
            background-image url($path deco/deco-melt.png)
            background-size 100% auto
            background-position center top
            background-repeat no-repeat
        &:after
            content ''
            display block
            position absolute
            z-index 5
            border 5px solid #FF6565
            width (360/375)*100%
            height (427/439)*100%
            top (6/439)*100%
            left (7.5/375)*100%
            -moz-box-sizing border-box
            -webkit-box-sizing border-box
            box-sizing border-box
        .wrap
            padding 0 (12/375)*100%
            position relative
            z-index 15
            display none
            &.active
                display table-cell
        .logo
            padding 0 (5/351)*100%
            .ui-img
                display block
                width 100%
        .title
            .ui-img
                display block
                width 100%
        .btnList
            padding 0 (36/351)*100%
            list-style none
            & > li
                margin-bottom (20/415)*100%
                &:last-child
                    margin-bottom 0
            .ui-btn
                display block
                width 100%
                .ui-img
                    display block
                    width 100%
            &--idx
                margin (20/415)*100% 0 0
            &--start
                margin (10/415)*100% 0 0
            &--select
                margin (30/415)*100% 0 0
        .mascot
            &--stage
                text-align right
                padding 0 (26/351)*100%
                margin (11/563)*100% 0 0
                .mascot__item
                    display inline-block
                    width (243/299)*100%
                    .ui-img
                        width 100%
        .back
            position absolute
            bottom 0
            left 0
            right 0
            width 100%
            text-align center
            .ui-btn
                display inline-block

                &--back
                    width (148/375)*100%
                &--goStage
                    width (198/375)*100%
                .ui-img
                    display block
                    width 100%
        &.idx
            height (400/635)*100vh

        &.other
            height 100vh


    &--setting
        display none

        .board__content
            .wrap
                display table-cell
.ui-btn
    background-color transparent
    border none
    -webkit-appearance none
    -moz-appearance none
    -ms-appearance none
    -o-appearance none
    appearance none

    &--new
        position relative
        &:before
            content ''
            display block
            position absolute
            left (-27/279)*100%
            top (-28/75)*100%
            width (92/279)*100%
            height (78/75)*100%
            background-image url($path deco/deco-new.png)
            background-size 100% auto
.leaderBoard
    position relative
    width (300/351)*100%
    margin 3% auto 0

    &__top
        position relative
        width 100%
        padding-top (20/300)*100%
        background-image url($path deco/leaderboard-top.png)
        background-size cover
        .ui-img
            position absolute
            width (270/300)*100%
            left (15/300)*100%
            top -(11/20)*100%

    &__body
        position relative
        padding 0 (15/300)*100%
        background-color #FFEDC2
    &__bottom
        position relative
        width 100%
        padding 0 (15/300)*100%
        background-color #FFEDC2
        &:after
            content ''
            position absolute
            top 100%
            left 0
            display block
            width 100%
            padding-top (68/300)*100%
            background-image url($path deco/leaderboard-bottom.png)
            background-size 100% auto
    &--part
        .leaderBoard__body
            padding-top (110/300)*100%
    &--all
        .leaderBoard__body
            padding-top (180/300)*100%
.exScrollBar 
    overflow hidden
    box-sizing border-box
    position absolute
    width 90%

    &--part
        top (5/130)*100%
        height (110/120)*100%

    &--all
        top -(10/220)*100%
        height 100%

    &__bar
        position absolute
        width (10/270)*100%
        height 100%
        right 0
        top 0
        border-radius 5px
        background-color #ffffff
        .scrollbarBox 
            position relative
            height 100%
            width 100%

            &__inner
                width 100%
                height 100%
                right 1px
                background-color #FF999A
                border 1px
                border-radius 5px
                position absolute
                right 0

    &__content 
        overflow-x hidden
        overflow-y scroll
        height 100%
        padding-right (20/270)*100%
        box-sizing border-box

        &::-webkit-scrollbar 
            display none
.scoreItem
    border-radius 5px
    color #734A16
    font-weight bold
    overflow hidden
    padding 6px
    font-family 'Adobe Gothic Std'

    &__rank
        float left
        text-align left
    &__name
        float left
        width (120/238)*100%
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
        text-align left
            
    &__score
        float right
    &--all
        background-color #ffffff
        font-size 12px
        margin-bottom 5px
        .scoreItem__rank
            width 15%
    &--self
        background-color #FF999A
        font-size 14px
        .scoreItem__rank
            width 18%
.settings
    width (300/351)*100%
    margin 3% auto 0
    &__top
        position relative
        width 100%
        padding-top (20/300)*100%
        background-image url($path deco/leaderboard-top.png)
        background-size cover
    &__body
        position relative
        padding 0 (15/300)*100%
        background-color #FFEDC2
    &__bottom
        position relative
        width 100%
        padding 0 (15/300)*100%
        background-color #FFEDC2
        &:after
            content ''
            position absolute
            top 100%
            left 0
            display block
            width 100%
            padding-top (68/300)*100%
            background-image url($path deco/leaderboard-bottom.png)
            background-size 100% auto
.settingItem
    &__label
        .ui-img
            display block
            width 100%
        
    &__content
        .socialList
            margin 0 (-11/270)*100%
            padding 0
            list-style none
            overflow hidden
            & > li
                width (100%/3)
                float left
                padding 0 (17/270)*100%

                .ui-img
                    width 100%
    &--sound
        margin-bottom (28/270)*100%
        overflow hidden
        .settingItem__label
            float left
            width (80/270)*100%
            margin-top (2.5/270)*100%
        .settingItem__content
            float right
            width (140/270)*100%
            .soundBtn
                display block
                width 100%
                padding-top (25/140)*100%
                background-color transparent
                background-image url($path buttons/btnSound.png)
                background-size cover
                &.on
                    background-position left top
                &.off
                    background-position left bottom
        
    &--share
        .settingItem__label
            width (160/270)*100%
        .settingItem__content
            margin-top (15/270)*100%
.score
    position absolute
    top 10px
    right 10px
    &__body
        width 150px
        height 55px
        background-image url($path backgrounds/scoreBackground.svg)
        background-size cover
        .scoreShow
            height 100%
            width 100%
            &__num
                text-align center
                color #501C0B
                font-weight bold
                position absolute
                top 50%
                right 15px
                -webkit-transform translateY(-50%)
                -moz-transform translateY(-50%)
                -ms-transform translateY(-50%)
                transform translateY(-50%)
                & > span
                    font-size 22px
                &:after
                    content '円'
                    font-size 16px
                    margin-left 2px

.buff
    position absolute
    top 70px
    right 10px
    &__body
        .buff
            display none
        .buffShow
            height 100%
            width 100%
            &__icon
                margin-bottom 5px
                width 50px
                height 50px
                animation grow 3000ms ease
                img
                    width 100%
                    height 100%
                    animation heart 750ms ease 4

.scoreBoard
    display none
    position relative
    width (320/375)*100%
    margin 0 auto
    top 50%
    -webkit-transform translateY(-50%)
    -moz-transform translateY(-50%)
    -ms-transform translateY(-50%)
    transform translateY(-50%)

    &:before
        content ''
        display block
        position absolute
        top (-10/325)*100%
        left (-2.5/325)*100%
        width (325/320)*100%
        padding-top (52/320)*100%
        background-image url($path deco/deco-melt-scoreboard.png)
        background-size cover
        z-index 10
    &:after
        content ''
        position relative
        top -1px
        display block
        padding-top (53/320)*100%
        background-image url($path deco/leaderboard-bottom.png)
        background-size 100% 100%

    &__body
        position relative
        z-index 5
        margin 0 auto
        background-color #FFEDC2
        padding (40/325)*100% (10/320)*100% 0
        .title
            margin-bottom (10/300)*100%
            .ui-img
                width 100%
        .news
            position relative
            .ui-img
                display block
                width 100%
            &__dialog
                position relative
                &--top
                    z-index 10
                    width (212/300)*100%
                &--btn
                    margin-top  -10%
                    z-index 15
                    width (185/300)*100%
                    text-align center
                    .ui-btn
                        margin-top (-27/200)*100%
                        display inline-block

            &__mascot
                position absolute
                z-index 5
                top (81/300)*100%
                right (-18/300)*100%
                width (150/300)*100%
        .scoreShow
            &:after
                content ''
                position relative
                top -1px
                display block
                padding-top (19/300)*100%
                background-image url($path deco/deco-scoreshow.png)
                background-size cover
            &__num
                background-color #603813
                border-radius 5px 5px 0 0
                text-align center
                color #ffffff
                font-weight bold
                & > span
                    font-size 40px
                &:after
                    content '円'
                    font-size 25px
        .back
            overflow hidden
            &--simple
                margin-top (10/300)*100%
            &--all
                margin-top 0
            .ui-btn
                &--retry
                    float left
                    width (178.2/300)*100%
                &--back
                    float right
                    width (115.2/300)*100%
                .ui-img
                    display block
                    width 100%

.scoreLevelup
    display none
    position relative
    width (500/603)*100%
    margin 0 auto
    top 50%
    -webkit-transform translateY(-50%)
    -moz-transform translateY(-50%)
    -ms-transform translateY(-50%)
    transform translateY(-50%)
    &__body
        display block
        width 100%
        .ui-img
            display block
            width 100%
    &__level
        position absolute
        top 73.2%
        transform translate(-50%,-50%)
        font-size calc(100vh * 24 / 675)
        font-weight bold
        font-family 'KozGoPr6N-Bold'
        letter-spacing -1px
        &--left
            left 34%
            color #222222
        &--right
            left 67%
            color #C9191D
    &__close
        position absolute
        bottom 0
        left 0
        right 0
        width 100%
        text-align center
        .ui-btn
            width calc(110 / 330 * 100%)
            margin auto
            .ui-img
                display block
                width 100%

@keyframes grow
    0%
        transform scale(1)
    50%
        transform scale(1.3)
    100%
        transform: scale(1)
@keyframes heart
    0%
        transform scale(1)
    16%
        transform scale(1.05)
    32%
        transform scale(0.95)
    50%
        transform scale(1)
    66%
        transform scale(1.05)
    82%
        transform scale(0.95)
    100%
        transform scale(1)

@media only screen and (min-width: 992px) 
    .ui
        &__main,
        &__endGame
            &__content
                width calc(375 / 635 * 100vh)
